<!-- app/views/girls/index.html.erb -->

<% @girls.in_groups_of(4, false) do |girl_group| %>
  <div class="row">
    <% girl_group.each do |girl| %>
      <div class="col-md-3">
        <div class="text-center">
          <h3><%= girl.name %></h3>
          <% girl.schedules.sort_by(&:date).each do |schedule| %>
            <% if (Date.today .. Float::INFINITY).cover?(schedule.date) %>
              <p><%= schedule.date %>: <%= schedule.work_day %></p>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
